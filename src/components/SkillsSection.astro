<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Animate skill bars on scroll
    const skillBars = document.querySelectorAll('.skill-progress') as NodeListOf<HTMLElement>;
    
    const observerOptions: IntersectionObserverInit = {
      threshold: 0.5,
      rootMargin: '0px 0px -100px 0px'
    };

    const skillObserver = new IntersectionObserver((entries: IntersectionObserverEntry[]) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const skillBar = entry.target as HTMLElement;
          const progress = skillBar.getAttribute('data-progress') || '0';
          
          // Animate the progress bar
          setTimeout(() => {
            skillBar.style.width = progress + '%';
          }, 200);
          
          skillObserver.unobserve(skillBar);
        }
      });
    }, observerOptions);

    skillBars.forEach(bar => {
      skillObserver.observe(bar);
    });

    // Animate tool items on scroll
    const toolItems = document.querySelectorAll('.tool-item') as NodeListOf<HTMLElement>;
    const toolObserver = new IntersectionObserver((entries: IntersectionObserverEntry[]) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          const target = entry.target as HTMLElement;
          setTimeout(() => {
            target.classList.add('animate-in');
          }, index * 100);
          toolObserver.unobserve(target);
        }
      });
    }, observerOptions);

    toolItems.forEach(item => {
      toolObserver.observe(item);
    });
  });
</script>

<style>
  .skills-section {
    background: linear-gradient(
      180deg,
      rgba(15, 15, 35, 0.8) 0%,
      rgba(26, 26, 46, 0.9) 50%,
      rgba(15, 15, 35, 0.8) 100%
    );
  }

  .skills-content {
    max-width: 1000px;
    margin: 0 auto;
  }

  .skills-categories {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  .skill-category {
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    border: 1px solid var(--glass-border);
    border-radius: 1.5rem;
    padding: 2.5rem;
    transition: all 0.3s ease;
  }

  .skill-category:hover {
    border-color: var(--primary-purple);
    box-shadow: 0 10px 30px rgba(139, 92, 246, 0.2);
  }

  .category-title {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 2rem;
    color: var(--text-primary);
  }

  .category-icon {
    font-size: 1.8rem;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .skill-item {
    background: var(--dark-secondary);
    padding: 1.5rem;
    border-radius: 1rem;
    border: 1px solid var(--glass-border);
    transition: all 0.3s ease;
  }

  .skill-item:hover {
    transform: translateY(-3px);
    border-color: var(--primary-pink);
    box-shadow: 0 8px 25px rgba(236, 72, 153, 0.2);
  }

  .skill-info {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .skill-icon {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, #8B5CF6 0%, #EC4899 100%);
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.2rem;
    transition: all 0.3s ease;
  }

  .skill-icon.modern {
    padding: 0.75rem;
  }

  .skill-icon.modern svg {
    width: 100%;
    height: 100%;
  }

  .skill-item:hover .skill-icon {
    transform: scale(1.1);
    box-shadow: 0 0 20px rgba(139, 92, 246, 0.4);
  }

  .skill-details {
    flex: 1;
  }

  .skill-name {
    display: block;
    font-weight: 600;
    color: var(--text-primary);
    font-size: 1.1rem;
  }

  .skill-level {
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  .skill-bar {
    width: 100%;
    height: 6px;
    background: rgba(139, 92, 246, 0.2);
    border-radius: 10px;
    overflow: hidden;
    position: relative;
    margin-top: 0.5rem;
  }

  .skill-progress {
    height: 100%;
    background: linear-gradient(90deg, #8B5CF6 0%, #EC4899 100%);
    border-radius: 10px;
    width: 0%;
    transition: width 1.5s ease-in-out;
    position: relative;
    box-shadow: 0 0 10px rgba(139, 92, 246, 0.5);
  }

  .skill-progress::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.3),
      transparent
    );
    animation: shimmer 2s infinite;
  }

  @keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }

  /* Tools Grid */
  .tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 1rem;
  }

  .tool-item {
    background: var(--dark-secondary);
    padding: 1.25rem;
    border-radius: 1rem;
    border: 1px solid var(--glass-border);
    text-align: center;
    transition: all 0.3s ease;
    opacity: 0;
    transform: translateY(20px);
  }

  .tool-item.animate-in {
    opacity: 1;
    transform: translateY(0);
  }

  .tool-item:hover {
    transform: translateY(-5px);
    border-color: var(--primary-purple);
    box-shadow: 0 10px 25px rgba(139, 92, 246, 0.3);
  }

  .tool-icon {
    width: 50px;
    height: 50px;
    margin: 0 auto 0.75rem;
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    transition: all 0.3s ease;
  }

  .tool-icon.adobe {
    background: linear-gradient(135deg, #FF0000, #FF6B6B);
    color: white;
    font-family: 'Inter', sans-serif;
    font-size: 1.2rem;
  }

  .tool-item:hover .tool-icon {
    background: var(--gradient-bg);
    color: white;
    transform: scale(1.1);
  }

  .tool-item:hover .tool-icon.adobe {
    background: linear-gradient(135deg, #FF0000, #FF6B6B);
  }

  .tool-name {
    font-weight: 500;
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  /* Certifications Section */
  .certifications {
    margin-top: 3rem;
    text-align: center;
  }

  .cert-title {
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: var(--text-primary);
  }

  .cert-list {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .cert-badge {
    background: var(--glass-bg);
    color: var(--text-secondary);
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    border: 1px solid var(--glass-border);
    font-weight: 500;
